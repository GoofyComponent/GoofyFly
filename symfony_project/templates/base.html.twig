{% set page = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GoofyFly{% endblock %}</title>
        <link rel="icon" href="">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
        {% if page == 'app_login' or page == 'app_register' %}
            <body class="flex items-center justify-center md:justify-between">
        {% else %}
            <body class="">
        {% endif %}
    
        {% block body %}{% endblock %}
    </body>
</html>
